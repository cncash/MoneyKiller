<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/main_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ChoeungEkActivity">

    <include layout="@layout/toolbar" />

    <android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/immersion_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <fragment
                    android:name="com.lean56.moneykiller.ui.fragment.MainListFragment"
                    android:id="@+id/fragCurrencyList"
                    android:layout_width="match_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="5.6"/>

            <fragment
                    android:name="com.lean56.moneykiller.ui.fragment.CalculatorFragment"
                    android:id="@+id/frag_calculator"
                    android:layout_width="match_parent"
                    android:layout_height="0.0dip"
                    android:maxHeight="280.0dip"
                    android:minHeight="200.0dip"
                    android:layout_weight="4.4"/>

        </LinearLayout>

        <!-- navigation drawer -->
        <android.support.v7.widget.RecyclerView
                android:id="@+id/drawer"
                android:scrollbars="vertical"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|start"
                android:choiceMode="singleChoice"
                android:divider="@null" />
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
