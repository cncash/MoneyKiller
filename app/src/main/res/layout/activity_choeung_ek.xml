<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/main_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ChoeungEkActivity">

    <LinearLayout
            android:id="@+id/immersion_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <fragment
                android:name="com.lean56.moneykiller.ui.fragment.MainListFragment"
                android:id="@+id/fragCurrencyList"
                android:layout_width="match_parent"
                android:layout_height="0.0dip"
                android:layout_weight="5.6"/>

        <fragment
                android:name="com.lean56.moneykiller.ui.fragment.CalculatorFragment"
                android:id="@+id/frag_calculator"
                android:layout_width="match_parent"
                android:layout_height="0.0dip"
                android:maxHeight="280.0dip"
                android:minHeight="200.0dip"
                android:layout_weight="4.4"/>

    </LinearLayout>

    <View android:id="@+id/mask"
          android:background="@android:color/black"
          android:visibility="gone"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:alpha="0.56"/>

</RelativeLayout>
